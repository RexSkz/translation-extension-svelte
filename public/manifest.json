{
  "name": "Translate Extension",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "A Chrome extension for translation using private wordlists",
  "default_locale": "en",
  "permissions": [
    "*://*/"
  ],
  "icons" : {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "build/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["build/content-script.css"],
      "js": ["build/content-script.js"],
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  }
}
